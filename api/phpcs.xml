<?xml version="1.0"?>
<ruleset name="GestaoPropostasAPI">
  <description>PHP_CodeSniffer rules for the API.</description>

  <arg name="basepath" value="."/>
  <arg name="colors"/>
  <arg name="parallel" value="4"/>
  <arg name="warning-severity" value="0"/>

  <file>app</file>
  <file>tests</file>

  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/writable/*</exclude-pattern>
  <exclude-pattern>*/builds/*</exclude-pattern>
  <exclude-pattern>*/app/Views/errors/*</exclude-pattern>
  <exclude-pattern>*/tests/session/*</exclude-pattern>
  <exclude-pattern>*/tests/database/*</exclude-pattern>

  <rule ref="PSR12"/>
</ruleset>
